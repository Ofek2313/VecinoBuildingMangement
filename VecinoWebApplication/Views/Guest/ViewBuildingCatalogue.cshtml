@using VecinoBuildingMangement.ViewModels
@using VecinoBuildingMangement.Models
@model BuildingCatalouge
@{
    ViewData["Title"] = "ViewBuildingCatalogue";
    Layout = "~/Views/Shared/MasterGuestPage.cshtml";
}
<link rel="stylesheet" href="../css/Building.css">
<div class="main">
    <ul class="Buidlings">
        @foreach(Building building in Model.Buildings)
        {
            <li class="box1">

                <h2>@building.Address</h2>
                <h3>@building.CityId</h3>
                <div class="info">


                    <div class="stats">
                        <span class="number">@building.TotalUnits</span>
                        <span class="stat">Units</span>
                    </div>
                    <div class="stats">
                        <span class="number">@building.Floors</span>
                        <span class="stat">Floors</span>
                    </div>
                </div>

            </li>
        }
       <div class="pages">
            @for (int i = 0; i < Model.PageCount; i++)
            {
                <p>
                    <a href="http://localhost:5269/Guest/ViewBuildingCatalogue/?page=@i">@i</a>
                </p>
            }
        </div>
    </ul>
</div>

